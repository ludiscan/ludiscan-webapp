    "next": "15.3.0",
    "npm-run-all2": "^7.0.2",
    "openapi-fetch": "^0.13.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "three": "^0.175.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@emotion/styled": "^11.14.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.24.0",
