{
  "name": "ludiscan-webapp",
  "private": false,
  "engines": {
    "node": "24.9.x",
    "bun": "1.3.x"
  },
  "author": "matuyuhi",
  "description": "",
  "repository": {
    "url": "https://github.com/ludiscan/ludiscan-webapp"
  },
  "version": "1.5.0",
  "scripts": {
    "dev": "next dev --turbopack -p 5173",
    "build:dev": "next build --turbopack",
    "build:prod": "next build",
    "start": "next start",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "fix:eslint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "lint:stylelint": "stylelint 'src/**/*.{tsx,css}'",
    "fix:stylelint": "stylelint --fix 'src/**/*.{tsx,css}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "lint": "run-p lint:eslint lint:stylelint",
    "fix": "run-p fix:eslint fix:stylelint",
    "test": "jest",
    "type": "tsc -noEmit",
    "release:patch": "npm version patch --message 'v%s' && git push && git push origin --tags",
    "release:minor": "npm version minor --message 'v%s' && git push && git push origin --tags",
    "release:major": "npm version major --message 'v%s' && git push && git push origin --tags",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook --config-dir .storybook --testTimeout 60000",
    "generate:api-schemes": "bunx openapi-typescript swagger.json --output generated/api.d.ts",
    "generate:api-schemes:local-fetch": "bunx openapi-typescript http://localhost:3211/swagger/api/v0/json --output generated/api.d.ts && eslint generated/api.d.ts --fix && prettier --write generated/api.d.ts",
    "build:heatmap-bundle": "bun scripts/create-heatmap-bundle.js",
    "generate:docs-json": "node scripts/generate-docs-json.js",
    "prebuild:prod": "bun run generate:docs-json && bun run build:heatmap-bundle",
    "tokens:build": "style-dictionary build --config style-dictionary.config.js",
    "tokens:watch": "style-dictionary build --config style-dictionary.config.js --watch"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@next/third-parties": "^16.1.1",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@reduxjs/toolkit": "^2.11.2",
    "@tanstack/react-query": "^5.90.16",
    "cookie": "^1.1.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.24.0",
    "jszip": "^3.10.1",
    "next": "15.5.9",
    "openapi-fetch": "^0.13.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-modal": "^3.16.3",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "remark-gfm": "^4.0.1",
    "three": "^0.175.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@argos-ci/cli": "^3.2.1",
    "@argos-ci/storybook": "^5.2.9",
    "@chromatic-com/storybook": "^4.1.3",
    "@emotion/babel-plugin": "^11.13.5",
    "@emotion/styled": "^11.14.1",
    "@types/cookie": "^1.0.0",
    "@types/file-saver": "^2.0.7",
    "esbuild": "^0.25.12",
    "npm-run-all2": "^7.0.2",
    "@eslint/compat": "^1.4.1",
    "@eslint/config-array": "^0.21.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@eslint/object-schema": "^2.1.7",
    "@jest/globals": "^29.7.0",
    "@react-three/eslint-plugin": "^0.1.2",
    "@storybook/addon-docs": "^9.1.17",
    "@storybook/addon-onboarding": "^9.1.17",
    "@storybook/addon-vitest": "9.1.8",
    "@storybook/jest": "0.2.2",
    "@storybook/nextjs": "^9.1.17",
    "@storybook/test-runner": "^0.23.0",
    "@svgr/webpack": "^8.1.0",
    "@swc/core": "^1.15.8",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-modal": "^3.16.3",
    "@types/three": "^0.173.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-cli": "^1.1.1",
    "eslint-config-next": "^15.5.9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-storybook": "^9.1.17",
    "glob": "^11.1.0",
    "globals": "^16.5.0",
    "openapi-typescript": "^7.10.1",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.7.4",
    "raw-loader": "^4.0.2",
    "rimraf": "^6.1.2",
    "storybook": "^9.1.17",
    "style-dictionary": "^5.1.1",
    "stylelint": "^16.26.1",
    "stylelint-config-recess-order": "^6.1.0",
    "stylelint-config-standard": "^38.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
