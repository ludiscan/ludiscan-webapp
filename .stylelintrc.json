{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "declaration-property-value-no-unknown": [true, {
      "ignoreProperties": {
        "mask-image": ["/radial-gradient/"],
        "background": ["/radial-gradient/"]
      }
    }]
  },
  "overrides": [
    {
      "files": ["src/**/*.tsx"],
      "customSyntax": "postcss-styled-syntax"
    }
  ]
}
